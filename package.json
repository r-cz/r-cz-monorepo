{
  "name": "r-cz-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "cf-build-main": "cd apps/main && bun run build",
    "cf-build-tools": "cd apps/tools && bun run build"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "prettier": "^3.5.2",
    "turbo": "^2.4.4"
  },
  "packageManager": "bun@1.2.3",
  "engines": {
    "node": ">=18.0.0"
  }
}

{
  "name": "r-cz-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "npm run build:shadcn-ui && npm run build:ui && npm run build:main && npm run build:tools",
    "build:main": "cd apps/main && bun run build",
    "build:tools": "cd apps/tools && bun run build",
    "build:ui": "cd packages/ui && bun run build",
    "build:shadcn-ui": "cd packages/shadcn-ui && bun run build",
    "lint": "turbo lint",
    "preview": "turbo preview",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^2.8.8",
    "turbo": "latest"
  },
  "packageManager": "bun@1.2.3"
}
{
  "name": "r-cz-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "npm run build:main && npm run build:tools && npm run copy:dist",
    "build:main": "cd apps/main && bun run build",
    "build:tools": "cd apps/tools && bun run build",
    "copy:dist": "mkdir -p dist/main dist/tools && cp -r apps/main/dist/* dist/main/ && cp -r apps/tools/dist/* dist/tools/",
    "lint": "turbo lint",
    "preview": "turbo preview",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "turbo": "latest"
  },
  "packageManager": "bun@1.0.0"
}